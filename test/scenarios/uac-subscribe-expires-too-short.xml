<scenario name="Basic Sipstone UAC">
  <!-- In client mode (sipp placing calls), the Call-ID MUST be         -->
  <!-- generated by sipp. To do so, use [call_id] keyword.                -->
  <send retrans="500">
    <![CDATA[

      SUBSCRIBE sip:resource@drachtio.org SIP/2.0
      Via: SIP/2.0/[transport] [local_ip]:[local_port];branch=[branch]
      From: <sip:user1@drachtio.org>;tag=[pid]SIPpTag00[call_number]
      To: <sip:resource@drachtio.org>
      Call-ID: [call_id]
      CSeq: 1 SUBSCRIBE
      Event: presence
      Expires: 2
      Content-Length: 0

    ]]>
  </send>

  <recv response="401" auth="true">
  </recv>

  <send retrans="500">
    <![CDATA[

      SUBSCRIBE sip:resource@drachtio.org SIP/2.0
      Via: SIP/2.0/[transport] [local_ip]:[local_port];branch=[branch]
      From: <sip:user1@drachtio.org>;tag=[pid]SIPpTag00[call_number]
      To: <sip:resource@drachtio.org>
      Call-ID: [call_id]
      CSeq: 2 SUBSCRIBE
      [authentication username=user1 password="pass123"]
      Event: presence
      Expires: 2
      Content-Length: 0

    ]]>
  </send>

  <recv response="423">
    <action>
      <ereg regexp="\d*" search_in="hdr" header="Min-Expires:" check_it="true" assign_to="1"/>
      <log message="[$1]"/>
    </action>
  </recv>

</scenario>

